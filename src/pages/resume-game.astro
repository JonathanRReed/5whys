---
import Base from '../layouts/Base.astro';
import ResumeGameApp from '../components/ResumeGame';
import PageHero from '../components/PageHero.astro';
import { siteConfig } from '../config/site';

const pageUrl = new URL('/resume-game', siteConfig.siteUrl).toString();
const resumeSchemas = [
  {
    '@context': 'https://schema.org',
    '@type': 'SoftwareApplication',
    '@id': `${pageUrl}#app`,
    name: 'Resume Game · Bullet Point Improvement',
    url: pageUrl,
    applicationCategory: 'BusinessApplication',
    operatingSystem: 'Web',
    offers: {
      '@type': 'Offer',
      price: '0',
      priceCurrency: 'USD',
    },
    description:
      'Interactive scoring system that helps you punch up resume bullets for clarity, action, and measurable impact.',
    creator: {
      '@type': 'Person',
      name: siteConfig.author.name,
      url: siteConfig.author.url,
    },
    image: new URL(siteConfig.ogImage, siteConfig.siteUrl).toString(),
    aggregateRating: {
      '@type': 'AggregateRating',
      ratingValue: '4.8',
      ratingCount: '12',
      bestRating: '5',
      worstRating: '1',
    },
  },
];
---
<Base
  title="Resume Game · Bullet Point Improvement"
  description="Score every résumé bullet for action, clarity, & impact—then iterate until your story resonates."
  breadcrumbs={[
    { label: 'Home', href: '/' },
    { label: 'Resume Game', href: '/resume-game' },
  ]}
  structuredData={resumeSchemas}
>
  <div class="relative space-y-24 overflow-hidden px-4 pb-24 pt-24 sm:pt-32">
    <section class="mx-auto w-full max-w-6xl">
      <PageHero
        eyebrow="Career Lab"
        title="Rewrite every bullet into a high signal résumé line."
        description="Simulate an eight second recruiter scan, surface missing numbers & verbs, & draft stronger bullets with guided scoring."
      />
    </section>

    <section class="mx-auto w-full max-w-6xl">
      <ResumeGameApp client:load showHeader={false} className="rounded-[2.5rem] border border-[hsl(var(--border)/0.35)] bg-[hsl(var(--overlay)/0.25)] px-4 pb-16 pt-10 sm:px-6 overflow-hidden" />
    </section>
  </div>
</Base>
